<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sourceLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:text="@string/detecting"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp">

        <EditText
            android:id="@+id/sourceText"
            android:layout_width="264dp"
            android:layout_height="82dp"
            android:layout_margin="20dp"
            android:autofillHints=""
            android:gravity="top"
            android:hint="@string/source_text"
            android:inputType=""
            android:minHeight="100dp"
            tools:targetApi="o" />

        <LinearLayout
            android:layout_width="97dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/convert"
                android:layout_width="39dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/speaker" />

            <ImageView
                android:id="@+id/copy"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/copy"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/clear"
                android:layout_width="32dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/clear"
                tools:ignore="VectorDrawableCompat" />



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/swapText"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/swap"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/micro"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/micro" />

        <Spinner
            android:id="@+id/spinnerLang"
            android:layout_width="146dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:entries="@array/spinnerLang" />

    </LinearLayout>

<!--    <TextView-->
<!--        android:id="@+id/translateLang"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="27dp"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:layout_margin="20sp"-->
<!--        android:text="@string/detecting"-->
<!--        android:textSize="20sp" />-->

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="132dp">

        <EditText
            android:id="@+id/TranslatedText"
            android:layout_width="268dp"
            android:layout_height="82dp"
            android:layout_margin="20dp"
            android:autofillHints=""
            android:gravity="top"
            android:hint="@string/translatedtext"
            android:inputType=""
            android:minHeight="100dp"
            android:text=""
            tools:targetApi="o" />
        <LinearLayout
            android:layout_width="97dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/convertT"
                android:layout_width="39dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/speaker" />

            <ImageView
                android:id="@+id/copyT"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/copy"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/clearT"
                android:layout_width="32dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/clear"
                tools:ignore="VectorDrawableCompat" />



        </LinearLayout>

</LinearLayout>



</LinearLayout>